{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "outDir": "server-dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "./server",
    "skipLibCheck": true,
    "rootDir": "./server",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ES2022",
    "module": "nodenext",
    "importHelpers": true,
    "moduleResolution": "nodenext",
  },
  "include": [
    "./*.js",
    "server/**/*.ts"
  ],
}
