{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "server-dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "baseUrl": "./server",
    "paths": {
      "@server/*": [
        "./*"
      ],
    }
  },
  "include": [
    "./*.js",
    "server/**/*.ts"
  ],
}
